# Configuration Mastodon
INSTANCE_URL=https://mastodon.social
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
ACCESS_TOKEN=your_access_token_here

# Configuration de la base de données PostgreSQL
POSTGRES_URL=jdbc:postgresql://mastodon_db:5432/mastodon
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# Configuration Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=mastodon_stream

# Configuration Spark
SPARK_CHECKPOINT_LOCATION=/tmp/checkpoints

# Paramètres de traitement
PROCESSING_KEYWORDS=Spark,Mastodon,Data
WINDOW_DURATION=1 minute
ACTIVE_USER_THRESHOLD=1
BATCH_SIZE=30
